@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="~/Archivos/CSS/indexStyle.css">

<div id="carouselExampleIndicators" class="carousel slide mt-0" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active d-item">
            <img src="~/Archivos/Imagenes/banner.jpg" class="d-block w-100 d-img" alt="...">
            <div class="carousel-caption top-0 mt-4">
                <p class="mt-1 fs-3 text-light mb-0">¡Bienvenido a </p>
                <h1 class="display-1">Pet's Poppins🎆</h1>
                <p class="mt-2 fs-3 text-light fw-bolder">El sitio E-commerce perfecto con todo lo que tu mascota necesita! 🤩</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Archivos/Imagenes/banner2.jpg" class="d-block w-100 d-img" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Archivos/Imagenes/banner3.jpg" class="d-block w-100" alt="...">
        </div>

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>