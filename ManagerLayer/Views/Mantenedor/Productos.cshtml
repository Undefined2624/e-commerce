
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-3">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card mt-0">
    <div class="card-header">
        <i class="fas fa-box me-1"></i> <b>Productos</b>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="openModal(null)">Crear Producto</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>descripción</th>
                    <th>Marca</th>
                    <th>categoria</th>
                    <th>precio</th>
                    <th>stock</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-6">
            <div id="toast" class="toast align-items-end text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        Hello, world! This is a toast message.
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="idProducto" type="text" value="0" /> @*Si el valor es 0, el producto es nuevo*@

            <form id="contenedor" class="row">

                <div class="col-sm-3">
                    <div class="mb-2">
                        <img id="imgProducto" height="197" width="200" class="border rounded mx-auto d-block img-fluid"/>
                    </div>
                    <div class="mb-2">
                        <input id="fileProducto" class="form-control" type="file" accept="img/png, img/jpg, img/jpeg" onchange="mostrarImagen(this)"/>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input required type="text" class="form-control" id="txtnombre" name="nombre"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea type="text" class="form-control" id="txtdescripcion" name="descripcion" style="height:125px;resize:none"></textarea>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="mb-3">
                        <label class="form-label">Marca</label>
                        <select id="txtmarca" class="form-select">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Categoría</label>
                        <select id="txtcategoria" class="form-select">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Precio</label>
                        <input required type="number" class="form-control" id="txtprecio" name="precio"/>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="mb-3">
                        <label class="form-label">Stock</label>
                        <input required type="number" class="form-control" id="txtstock" name="stock" />
                    </div>  
                    <div class="mb-3">
                        <label class="form-label">Estado del producto</label>
                        <select id="txtestado" class="form-select">
                            <option selected>Seleccione una opción</option>
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                </div>

            </form>

            </div>

            <div class="row mt-2">
                <div class="col-12">
                    <div id="MensajeError" class="alert alert-danger" role="alert">
                        A simple dark alert—check it out!
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-warning btn-sm" data-bs-dismiss="modal">Cerrar</button>

                <button type="button" class="btn btn-primary btn-sm" id="btnGuardar" onclick="GuardarProducto()">
                    <span id="spinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display:none;"></span>
                    <span id="btnText">Guardar</span>
                </button>


            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
       
        var tabladata;

        function mostrarImagen(input) {

            if (input.files)
            {

                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#imgProducto").attr("src", e.target.result).width(200).height(197);
                }

                reader.readAsDataURL(input.files[0]);

            }

        }

        jQuery.ajax({
            url: '@Url.Action("GetProductos","Mantenedor")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                console.log(data)
            }
        })

        tabladata = $("#tabla").DataTable({
         
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("GetProductos","Mantenedor")',
                type: 'GET',
                dataType: 'json'
            },
            "columns": [ 
                { "data": "nombre" },
                { "data": "descripcion" },

                {
                    "data": "Marca", "render": function (data) {
                      
                        return data.nombre
                    }
                },
                {
                    "data": "Categoria", "render": function (data) {
                        return data.nombre
                    }
                },
                { "data": "precioUnitario" },
                { "data": "stock" },
                {
                    "data": "activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge rounded-pill bg-success">Sí</span>'
                        } else {
                            return '<span class="badge rounded-pill bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent": "<button class='btn btn-warning btn-sm btn-editar'><i class='fas fa-pen'></i></button> <button class='btn btn-danger btn-sm btn-eliminar'><i class='fas fa-trash'></i></button>",
                    "orderable": false,
                    "searchable": false,
                    "width": "55px"
                }
            ]
        });

        jQuery.ajax({
            url: '@Url.Action("GetMarcas", "Mantenedor")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

                console.log(data)
                $("<option>").attr({ "value" : 0, "disabled" : "true" }).text("Seleccione una opción").appendTo("#txtmarca");

                $.each(data.data, function (index, valor) {

                    $("<option>").attr({ "value": valor.idMarca }).text(valor.nombre).appendTo("#txtmarca");

                })

            },
            error: function (error) {
                console.log(error)
            }
        });

        jQuery.ajax({
            url: '@Url.Action("GetCategorias", "Mantenedor")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

                console.log(data)
                $("<option>").attr({ "value": 0, "disabled": "true" }).text("Seleccione una opción").appendTo("#txtcategoria");

                $.each(data.data, function (index, valor) {

                    $("<option>").attr({ "value": valor.idCategoria }).text(valor.nombre).appendTo("#txtcategoria");

                })

            },
            error: function (error) {
                console.log(error)
            }
        });

        function openModal(data) {
                        
            $("#imgProducto").removeAttr("src"); 
            $("#fileProducto").val("");
            $("#idProducto").val(0);
            $("#txtnombre").val("");
            $("#txtdescripcion").val("");
            $("#txtmarca").val(0);
            $("#txtcategoria").val(0);
            $("#txtprecio").val("");
            $("#txtstock").val("");
            $("#txtestado").val(0);
            $("#MensajeError").hide();

            if (data != null) {

                debugger;

                $("#idProducto").val(data.idProducto);
                $("#txtnombre").val(data.nombre);
                $("#txtdescripcion").val(data.descripcion);
                $("#txtmarca").val(data.Marca.idMarca);
                $("#txtcategoria").val(data.Categoria.idCategoria);
                $("#txtprecio").val(data.precioUnitario);
                $("#txtstock").val(data.stock);
                $("#txtestado").val(data.activo == true ? 1 : 0);

                jQuery.ajax({
                    url: '@Url.Action("ImagenProducto", "Mantenedor")',
                    type: 'GET',
                    data: { idProducto: data.idProducto },
                    dataType: 'json',
                    success: function (data) {
                        debugger;

                        if (data.conversion) {
                            debugger;
                            $("#imgProducto").attr({ "src": "data:image/" + data.extension + ";base64," + data.base64});

                        }

                    },
                    error: function (error) {
                        console.log(error)
                    }
                });

            }

            $('#formModal').modal('show');
        }

        $("#tabla tbody").on("click", ".btn-editar", function () {

            var filaSeleccionada = $(this).closest('tr');
            var data = tabladata.row(filaSeleccionada).data();
            console.log(data);
            openModal(data);

        });

        $("#tabla tbody").on("click", ".btn-eliminar", function () {

            var ProductoSeleccionado = $(this).closest('tr');
            var data = tabladata.row(ProductoSeleccionado).data();
            console.log(data);

            swal({
                title: "¿Está seguro de que desea eliminar el producto? 😳",
                text: "El será eliminado de forma permanente",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Sí!, Eliminar",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarProducto","Mantenedor")',
                        type: 'POST',
                        data: JSON.stringify({ idProducto: data.idProducto }),
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) { //data almacena la respuesta del controlador

                            if (data.ResultadoJson) {

                                tabladata.row(ProductoSeleccionado).remove().draw();

                            }
                            else
                            {

                                swal("No se pudo eliminar el producto", data.MensajeJson, "error");

                            }

                        },
                        error: function (error) {

                            console.log(error)

                        }
                    });

                    swal("Eliminado!", "El producto ha sido eliminado con éxito!", "success");
                });

        });

        function GuardarProducto() {

            $("#btnGuardar").prop('disabled', true); // Deshabilita el botón para prevenir clicks adicionales
            $("#spinner").show();
            $("#btnText").text("Guardando...");

            var imagenSeleccionada = $("#fileProducto")[0].files[0]; // Se obtiene la imagen seleccionada

            var Producto = {

                idProducto: $("#idProducto").val(),
                nombre: $("#txtnombre").val(),
                descripcion: $("#txtdescripcion").val(),
                Marca: {
                    idMarca: $("#txtmarca option:selected").val(),
                    nombre: $("#txtmarca option:selected").text()
                },
                Categoria: {
                    idCategoria: $("#txtcategoria option:selected").val(), 
                    nombre: $("#txtcategoria option:selected").text(), 
                    descripcion: $("#txtcategoria option:selected").text()
                },
                precioUnitario: $("#txtprecio").val(),
                stock: $("#txtstock").val(),
                activo: $("#txtestado").val() == 1 ? true : false
            }

            var request = new FormData(); // Se crea un objeto FormData para enviar la imagen y el objeto Producto al controlador
            request.append("Producto", JSON.stringify(Producto))
            request.append("ArchivoImagen", imagenSeleccionada);       

            jQuery.ajax({

                url: '@Url.Action("GuardarProducto","Mantenedor")', // Se llama al método GuardarUsuario del controlador Home
                type: 'POST',
                data: request,
                processData: false, // No procesa los datos antes de enviarlos, ya que se está enviando un objeto FormData
                contentType: false, // No establece el tipo de contenido

                success: function (data) { // Se ejecuta si la petición es exitosa. data es la respuesta del controlador (método GuardarUsuario).
                 
                    if (Producto.idProducto == 0) // Si el id del usuario es 0, significa que es un USUARIO NUEVO
                    {

                        if (data.idGenerado != 0) { // Si el id del usuario es diferente de 0, significa que el usuario se guardó correctamente

                            Producto.idProducto = data.idGenerado; // Se asigna el id del usuario que se guardó correctamente
                            tabladata.row.add(Producto).draw(false); // Se agrega el nuevo usuario a la tabla

                            $("#formModal").modal("hide"); // Se cierra el modal
                            $("#toast .toast-body").text(data.Mensaje);
                            $("#toast").show();
                            $("#toast").fadeOut(6000);

                        }
                        else
                        {

                         $("#MensajeError").text(data.Mensaje);
                         $("#MensajeError").show();

                        }

                    }
                    else
                    {
                         // Se actualiza la fila seleccionada con los datos del usuario
                        $("#formModal").modal("hide");
                        $("#tabla").DataTable().ajax.reload(
                            null, false
                        );
                        $("#toast .toast-body").text(data.Mensaje);
                        $("#toast").show();
                        $("#toast").fadeOut(6000);
                    }

                },
                error: function (error) { // Se ejecuta si la petición falla

                    console.log(error);

                },
                beforeSend: function () { // Se ejecuta antes de enviar la petición

                    console.log("Enviando datos...");

                },
                complete: function () {
                    // Siempre oculta el spinner y muestra el texto original del botón cuando la operación haya finalizado
                    $("#btnGuardar").prop('disabled', false); // Rehabilita el botón
                    $("#spinner").hide();
                    $("#btnText").text("Guardar");
                }
            });          

        }

    </script>

}
